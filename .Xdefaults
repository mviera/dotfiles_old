!#########################################
!
!	Xcursor.config
!
Xcursor*theme:			Vanilla-DMZ

! #########################################
!
! 	Xterm config
!
XTerm*jumpScroll:		true
XTerm*multiScroll:		true


! #########################################
!
!	URxvt config
!
urxvt*background:		black
urxvt*foreground:		#D9D9D9
urxvt*fading:   		40
urxvt*tintColor: 		#000000
urxvt*transparent:		true
urxvt*shading:   		20
urxvt*inheritPixmap: 		true
urxvt*scrollBar: 		false
urxvt*title: 			Terminal
urxvt*termName: 		rxvt
urxvt*scrollTtyKeypress:    	true
urxvt*scrollTtyOutput:      	false
urxvt*scrollWithBuffer:     	false
urxvt*urlLauncher:		firefox
urxvt*matcher.button:		1
urxvt*scrollstyle:      	plain
urxvt*secondaryScroll:  	true
urxvt*cutchars: 		`"'&()urxvt*,;<=>?@[]{|}$"`
urxvt*font: 			xft:Terminus:pixelsize=14:antialias=true:hinting=true
urxvt*boldFont: 		xft:Terminus:pixelsize=14:antialias=true:bold:hinting=true
urxvt*italicFont: 		xft:Terminus:pixelsize=14:antialias=true:italic:autohint=true:hinting=true
urxvt*bolditalicFont: 		xft:Terminus:pixelsize=14:antialias=true:bold:italic:autohint=true:hinting=true
urxvt*iconName:			rxvt

! ########################################
!
! 	Yeahconsole.config
!
yeahconsole*restart:		1
yeahconsole*toggleKey:		None+F1
yeahconsole*keyFull:		Alt+f
yeahconsole*background:  	black
yeahconsole*foreground: 	white
yeahconsole*loginShell:		True
yeahconsole*consoleHeight: 	30
yeahconsole*stepSize:		5
yeahconsole*aniDelay:		3 
yeahconsole*handleWidth:	1
yeahconsole*handleColor:	black
yeahconsole*term:		urxvt
yeahconsole*scrollBar: 		false
yeahconsole*reverseVideo: 	false
yeahconsole*tintColor: 		#000000
yeahconsole*inheritPixmap: 	true
yeahconsole*shading:		25
yeahconsole*fading:		25
yeahconsole*saveLines: 		10000
yeahconsole*cursorBlink: 	true
yeahconsole*font: 		xft:Terminus:pixelsize=14:antialias=true:hinting=true

